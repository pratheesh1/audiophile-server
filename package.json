{
  "name": "audiophile_server",
  "version": "1.0.0",
  "private": true,
  "description": "Audiophile Server",
  "author": "Pratheesh Soman (pratheesh1269@gmail.com)",
  "license": "ISC",
  "keywords": [
    "e-commerce",
    "audiophile",
    "server",
    "nodejs"
  ],
  "main": "app.js",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "node -r tsconfig-paths/register -r ts-node src/app.js",
    "build": "rm -rf build && tsc --project tsconfig.build.json && tscpaths -p tsconfig.build.json -s ./src -o ./build",
    "test": "jest",
    "lint": "eslint . --ext .ts && prettier --check .",
    "format": "eslint . --ext .ts --fix && prettier --write .",
    "prepare": "husky install",
    "postbuild": "./scripts/postbuild",
    "dev:db:migrate": "./scripts/migrate",
    "dev:db:local:start": "cd docker && docker-compose up -d",
    "dev:db:local:stop": "cd docker && docker-compose down --remove-orphans",
    "dev:db:local:reset": "prisma migrate reset",
    "db:gen:schema": "prisma format && prisma generate",
    "dev:db:prisma:push": "prisma db push",
    "dev:db:local:seed": "prisma db seed",
    "dev:db:sync": "yarn db:gen:schema && yarn dev:db:prisma:push",
    "docker:reset": "./scripts/docker_reset",
    "workspace:reset": "./scripts/workspace_cleanup"
  },
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "@sinclair/typebox": "^0.24.50",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "csrf": "^3.1.0",
    "env-schema": "^5.1.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "http-status-codes": "^2.2.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "path": "^0.12.7",
    "pino": "^8.7.0",
    "uuid": "^9.0.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.1.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/node": "*",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.41.0",
    "commitlint": "^17.1.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "fluent-json-schema": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.7.1",
    "prisma": "^4.5.0",
    "prisma-class-validator-generator": "^0.2.0",
    "prisma-docs-generator": "^0.5.0",
    "prisma-zod-generator": "^0.5.3",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tscpaths": "^0.0.9",
    "typescript": "*"
  }
}
